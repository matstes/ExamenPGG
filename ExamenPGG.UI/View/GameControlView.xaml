<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenPGG.UI.View.GameControlView"
             xmlns:viewmodel="clr-namespace:ExamenPGG.UI.ViewModel"
             x:DataType="viewmodel:GameControlViewModel">

    <HorizontalStackLayout BackgroundColor="CadetBlue">

        <Grid ColumnDefinitions="20,auto,*,auto,20" WidthRequest="1024">
            
        <Label Text="Game Control View"
               MaximumWidthRequest="150"
               HorizontalOptions="Start"
               Grid.Column="1"
               FontSize="24"
               Padding="10"/>

            <Label Text="{Binding Logger}"
               Padding="10"
               HorizontalTextAlignment="Start"
               HorizontalOptions="StartAndExpand"
               Grid.Column="2"
               MaxLines="5"
               HeightRequest="150"
               WidthRequest="800"/>

            <Button Text="Roll Dice"
                Grid.Column="3"
                FontSize="24" 
                Command="{Binding RollDiceCommand}"
                IsEnabled="{Binding Game.IsDiceButtonEnabled}"
                TextColor="Black"/>

        </Grid>

    </HorizontalStackLayout>

</ContentView>