<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenPGG.UI.View.InformationView"
             xmlns:viewmodel="clr-namespace:ExamenPGG.UI.ViewModel"
             x:DataType="viewmodel:InformationViewModel">

    <Grid RowDefinitions = "20,*,*,*,auto,20">

        <Image Source="Logo.png"
               HorizontalOptions="Start"
               Margin="10"
               WidthRequest="100" 
               Grid.Row="1"/>

        <Label Text="Players" Grid.Row="2" TextColor="Black" FontSize="Large" Padding="10"/>
        
        <ListView ItemsSource="{Binding Game.PlayerList}"
                  Grid.Row="3"/>

        <HorizontalStackLayout Grid.Row="4">

            <Button Text="Rules"/>
            <Button Text="GoBack"/>

        </HorizontalStackLayout>

    </Grid>

</ContentView>