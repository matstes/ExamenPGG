<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenPGG.UI.View.InformationView"
             xmlns:viewmodel="clr-namespace:ExamenPGG.UI.ViewModel">

    <VerticalStackLayout BackgroundColor="LawnGreen">

        <Grid RowDefinitions = "20,*,*,*,*,20">

            <Image Source="Logo.png"
                   WidthRequest="100" 
                   Grid.Row="1"
                   Margin="0,0,0,50"/>

            <Label Text="Players" Grid.Row="2" TextColor="Black" FontSize="Large"/>
            <ListView ItemsSource="{Binding Player}"
                  Grid.Row="3"/>

            <HorizontalStackLayout Grid.Row="4">
                
                <Button Text="Rules"/>
                <Button Text="GoBack"/>
                
            </HorizontalStackLayout>
            
        </Grid>
        
    </VerticalStackLayout>
    
</ContentView>